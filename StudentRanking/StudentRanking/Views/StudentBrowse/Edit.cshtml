@model StudentRanking.Models.Student

@{
    ViewBag.Title = "Edit";
}

<h2>Редактиране</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Student</legend>

        <div class="editor-label">
            <label>Първо име</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>

        <div class="editor-label">
            <label>Фамилия</label> <br />
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName) 
        </div>

        <div class="editor-label">
            <label>ЕГН</label>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.EGN, new { @readonly = "readonly" })
        </div>

        @Html.HiddenFor(model => model.EGN)

        <div class="editor-label">
            <label>Имейл</label>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Email, new { @type = "email" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="editor-label">
            <label>Пол</label>
        </div>

        <div class="editor-field">
            <label style="font-size: 1.1em;float:left;margin-right:50px">
                @Html.RadioButtonFor(model => model.Gender, true,
                              new { style = "border: 1px solid #e2e2e2;margin: 5px 0 6px 0;padding: 5px;width: 14px" })
                Мъж
            </label>

            <label style="font-size: 1.1em">
                @Html.RadioButtonFor(model => model.Gender, false,
                              new { style = "border: 1px solid #e2e2e2;margin: 5px 0 6px 0;padding: 5px;width: 14px" })
                Жена
            </label>
            @Html.ValidationMessageFor(model => model.Gender)
        </div>

        <p>
            <input type="submit" value="Запиши" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад към списъка", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
