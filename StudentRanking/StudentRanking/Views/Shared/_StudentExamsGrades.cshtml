@model IEnumerable<StudentRanking.DataAccess.Exam>

@{
    ViewBag.Title = "StudentPreferncesTable";
}

<div id="resultTable">
    <table>
        @if (Model.Count() != 0)
        {
         
            <tr>
                <th>
                    ЕГН
                </th>
                <th>
                    Име на изпит
                </th>
                <th>
                    Оценка
                </th>
                <th></th>
            </tr>

            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentEGN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExamName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grade)
                    </td>
                    <td>
                        @Html.ActionLink("Редактиране", "Edit", new { examName = item.ExamName, studentEGN = item.StudentEGN }) |
                        @Html.ActionLink("Детайли", "Details", new { examName = item.ExamName, studentEGN = item.StudentEGN }) |
                        @Html.ActionLink("Изтриване", "Delete", new { examName = item.ExamName, studentEGN = item.StudentEGN })
                    </td>
                </tr>
            }
       
        }
    </table>
</div>
