@model StudentRanking.Models.Exam

@{
    ViewBag.Title = "Добавяне на оценка";
    }
<h2>Добавяне на оценка</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Exam</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.StudentEGN)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.StudentEGN, new { maxlength = 10, @type = "number", minlength = 10 })
            @Html.ValidationMessageFor(model => model.StudentEGN)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExamName)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.ExamName, ViewData["currentExamName"] as SelectList)
        </div>
        <br>
        <div class="editor-label">
            @Html.LabelFor(model => model.Grade)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Grade)
            @Html.ValidationMessageFor(model => model.Grade)
        </div>


        <p>
            <input type="submit" value="Добави" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Обратно към списъка", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
